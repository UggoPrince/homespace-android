<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomeSpace" parent="Theme.MaterialComponents.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_500</item>
        <item name="colorPrimaryVariant">@color/indigo_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tertiary</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/slate_900</item>
        <item name="android:textViewStyle">@color/white</item>
        <!--<item name="colorSurface">@color/slate_900</item>-->
        <item name="android:editTextColor">@color/slate_700</item>
        <item name="bottomNavigationStyle">
            @style/Widget.App.BottomNavigationView
        </item>
        <!--<item name="bottomNavigationStyle">
            @style/Widget.App.BottomNavigationView</item>-->
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="navigationViewColor">@color/slate_900</item>
        <item name="bottomNavChecked">@color/indigo_500</item>
        <item name="bottomNavNotChecked">@color/white</item>
        <item name="navigationChecked">@color/white</item>
        <item name="navigationNotChecked">@color/white</item>
    </style>

    <style name="Theme.HomeSpace.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorSurface">@color/slate_900</item>
    </style>

    <style name="Theme.HomeSpace.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.HomeSpace.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Widget.App.BottomNavigationView"
        parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView"
        parent="">
        <!--<item name="android:state_checked">@color/indigo_500</item>-->
        <item name="colorPrimary">@color/slate_900</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>
    <style name="propertyType">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="propertyAddress">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CardStyle">
        <item name="strokeColor">@color/slate_600</item>
        <item name="strokeWidth">0.5dp</item>
    </style>
</resources>