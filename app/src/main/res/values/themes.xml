<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HomeSpace" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_500</item>
        <item name="colorPrimaryVariant">@color/indigo_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/tertiary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/slate_700</item>
        <item name="bottomNavigationStyle">
            @style/Widget.App.BottomNavigationView</item>
        <item name="android:editTextColor">@color/slate_700</item>
        <!--<item name="android:textColorHint">@color/amber_500</item>-->
        <item name="navigationViewColor">@color/white</item>
        <item name="bottomNavChecked">@color/indigo_500</item>
        <item name="bottomNavNotChecked">@color/slate_700</item>
        <item name="navigationChecked">@color/indigo_500</item>
        <item name="navigationNotChecked">@color/slate_700</item>
    </style>

    <style name="Theme.HomeSpace.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HomeSpace.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HomeSpace.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.App.BottomNavigationView"
        parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView"
        parent="">
        <!--<item name="android:state_checked">@color/indigo_500</item>-->
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/indigo_500</item>
        <item name="itemIconTint">@drawable/bottom_navigation_selector</item>
    </style>

    <style name="propertyType">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/tertiary</item>
    </style>
    <style name="propertyAddress">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/slate_700</item>
    </style>

</resources>